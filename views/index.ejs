<%- include("./partials/header.ejs") %>

    <div class="container">
        <div class="row">

            <div class="col-sm-6 mt-5 mr-5">
                <h1 class="alert alert-success text-center">ADD NEW STUDENT</h1>
                <form method="post">
                    <div class="mb-5">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="mb-5">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control" id="age" name="age">
                    </div>
                    <div class="mb-5">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" class="form-control" id="fees" name="fees">
                    </div>
                    
                    <button type="submit" class="btn btn-primary">submit</button>
                </form>
            </div>
            <div class="col-sm-6 mt-5 ">
                <h1 class="alert alert-danger text-center">LIST OF STUDENTS</h1>
                <table class="table table-striped table-hover table-bordered ">
                    <thead>
                      <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Fees</th>
                        <th scope="col">Date</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                       
                        <% var i=1 %> 
                      <% data.forEach((item)=>{ %>
                        <tr>
                            <td><%= i++ %></td>  
                            <td><%= item.name %></td>
                            <td><%= item.age %></td>
                            <td><%= item.fees %></td>
                            <td><%= item.Date %></td>
                            <td>
                                <form action="/students/edit/<%= item._id %>" class="d-inline" method="get">
                                    <button class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></button>
                                </form>
                                <form action="/students/delete/<%= item._id %>" class="d-inline" method="post">
                                    <button class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></button>
                                </form>
                            
                            </td>
                          </tr>
                     <% })%>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>

    <%- include("./partials/footer.ejs") %>